<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<androidx.appcompat.widget.Toolbar
		android:id="@+id/checked_in_fragment_toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		app:navigationIcon="@drawable/ic_arrow_back"
		app:title="00:12"
		app:titleTextAppearance="@style/NotifyMe.Text.Title" />

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/checked_in_fragment_card"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:background="@drawable/bg_half_card"
			android:elevation="@dimen/card_elevation"
			android:paddingHorizontal="@dimen/spacing_large"
			app:layout_constraintBottom_toTopOf="@id/checked_in_fragment_check_out_button"
			app:layout_constraintTop_toTopOf="parent">

			<ImageView
				android:id="@+id/checked_in_fragment_venue_type_icon"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:src="@drawable/ic_illus_checked_in_time"
				app:layout_constraintBottom_toTopOf="@id/checked_in_fragment_venue_info_scrollview"
				app:layout_constraintHeight_max="180dp"
				app:layout_constraintTop_toTopOf="parent" />

			<ScrollView
				android:id="@+id/checked_in_fragment_venue_info_scrollview"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:scrollbars="none"
				app:layout_constraintBottom_toBottomOf="parent">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<TextView
						android:id="@+id/checked_in_fragment_title"
						style="@style/NotifyMe.Text.Title"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/spacing_huge"
						android:gravity="center"
						app:layout_constraintBottom_toTopOf="@id/checked_in_fragment_subtitle"
						tools:text="Cyber Cafe SV" />

					<TextView
						android:id="@+id/checked_in_fragment_subtitle"
						style="@style/NotifyMe.Text"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/spacing_very_small"
						android:layout_marginBottom="@dimen/spacing_huge"
						android:gravity="center"
						android:paddingBottom="@dimen/button_radius"
						app:layout_constraintBottom_toBottomOf="parent"
						tools:text="Lausanne" />

				</LinearLayout>
			</ScrollView>

		</androidx.constraintlayout.widget.ConstraintLayout>

		<Button
			android:id="@+id/checked_in_fragment_check_out_button"
			style="@style/NotifyMe.Button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:elevation="@dimen/card_elevation"
			android:text="@string/checkout_button_title"
			android:translationY="@dimen/negative_button_radius"
			app:layout_constraintBottom_toTopOf="@id/checked_in_fragment_reminder_container"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

		<LinearLayout
			android:id="@+id/checked_in_fragment_reminder_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="@dimen/spacing_large"
			android:orientation="vertical"
			app:layout_constraintBottom_toBottomOf="parent">

			<TextView
				style="@style/NotifyMe.Text.Status.Small"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="@string/checkin_set_reminder" />

			<com.google.android.material.button.MaterialButtonToggleGroup
				android:id="@+id/checked_in_fragment_toggle_group"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginTop="@dimen/spacing_medium"
				android:layout_marginBottom="@dimen/spacing_large"
				app:selectionRequired="true"
				app:singleSelection="true">

				<com.google.android.material.button.MaterialButton
					android:id="@+id/checked_in_fragment_toggle_button_1"
					style="@style/NotifyMe.ToggleButton"
					android:text="Off"
					android:textAllCaps="true" />

				<com.google.android.material.button.MaterialButton
					android:id="@+id/checked_in_fragment_toggle_button_2"
					style="@style/NotifyMe.ToggleButton"
					android:text="30'" />

				<com.google.android.material.button.MaterialButton
					android:id="@+id/checked_in_fragment_toggle_button_3"
					style="@style/NotifyMe.ToggleButton"
					android:text="1h" />

				<com.google.android.material.button.MaterialButton
					android:id="@+id/checked_in_fragment_toggle_button_4"
					style="@style/NotifyMe.ToggleButton"
					android:text="2h" />

				<com.google.android.material.button.MaterialButton
					android:id="@+id/checked_in_fragment_toggle_button_5"
					style="@style/NotifyMe.ToggleButton"
					android:text="4h" />

			</com.google.android.material.button.MaterialButtonToggleGroup>

		</LinearLayout>
	</androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>